generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String    @id @default(cuid())
  username          String    @unique  // sAMAccountName from AD
  email             String?   // Primary email from AD (optional)
  name              String?   // Display name from AD
  recoveryEmail     String?   // Recovery email set by user
  onboardingComplete Boolean  @default(false)
  
  // AD specific fields (optional, for additional context)
  distinguishedName String?   // Full DN from AD
  groups            String[]  // AD groups (stored as array)
  
  // Timestamps
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  lastLoginAt       DateTime?
  
  @@map("users")
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String
  action    String   // "login", "recovery_email_set", "password_change", etc.
  details   Json?    // Additional details about the action
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  
  @@map("audit_logs")
}